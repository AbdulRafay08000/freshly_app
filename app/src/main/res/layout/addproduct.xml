<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="114dp"
            android:layout_height="69dp"
            android:layout_marginStart="61dp"


            android:contentDescription="Back"
            android:src="@drawable/small_logo" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freshly"
            android:textSize="27sp"
            android:layout_marginTop="20dp"

            android:textColor="#1C1C1C"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Image Picker -->
    <ImageView
        android:id="@+id/imagePicker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/upload"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"

        android:contentDescription="Image Picker" />

    <!-- Title Input -->
    <EditText
        android:id="@+id/titleInput"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:hint="Add Title"
        android:textSize="15sp"
        android:layout_marginTop="68dp"
        android:background="@drawable/roundedbackground"
        android:padding="12dp"

        android:layout_marginStart="20dp"

        android:inputType="text" />





        <EditText
            android:layout_marginTop="23dp"
            android:id="@+id/priceInput"
            android:layout_width="333dp"
            android:layout_height="41dp"
            android:hint="Set Price"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:background="@android:drawable/editbox_background"
            android:inputType="numberDecimal" />


    <!-- Category Dropdown android:entries="@array/category_options" -->
    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:padding="12dp"
        android:hint="Category"
        android:textSize="16sp"
        android:dropDownVerticalOffset="8dp"
        android:color="#C5AFAF"
        android:background="@android:drawable/editbox_background"
        android:spinnerMode="dropdown"
        />

    <!-- Description Input -->
    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="333dp"
        android:layout_height="110dp"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"
        android:hint="Write description here"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textMultiLine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUpButton"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:text="Add Item"
        android:background="@drawable/outline_button"
        android:layout_gravity="center"
        android:backgroundTint="#00282E"
        android:textColor="#FFFFFF"
        android:layout_marginTop="57dp"
        android:padding="12dp" />





</LinearLayout>
