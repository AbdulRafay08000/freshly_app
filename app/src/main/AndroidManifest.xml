<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/roundedbg" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CustomerLoginActivity" android:exported="true" />
        <activity android:name=".CustomerSignupActivity" android:exported="true" />
        <activity android:name=".VendorSignupActivity" android:exported="true" />
        <activity android:name=".VendorLoginActivity" android:exported="true" />
        <activity android:name=".HomePageActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".VendorDashboardActivity" />
        <activity android:name=".AddProduct"/>
        <activity android:name=".SettingVen"/>
        <activity android:name=".UpdateProductActivity"/>
        <activity android:name=".CartActivity"/>

    </application>

</manifest>